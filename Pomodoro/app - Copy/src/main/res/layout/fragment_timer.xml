<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryDark">

    <TextView
        android:id="@+id/tv_status_timer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:gravity="center_horizontal"
        android:layout_marginLeft="@dimen/dimen_16"
        android:layout_marginRight="@dimen/dimen_16"
        android:layout_marginTop="@dimen/dimen_20"
        android:textSize="@dimen/text_18sp"
        android:textColor="@android:color/white"
        android:textAllCaps="true"/>

    <vn.edu.techkids.pomodoro.view.TimerView
        android:id="@+id/timer_view"
        android:layout_width="match_parent"
        android:layout_below="@id/tv_status_timer"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_20"
        android:layout_marginLeft="@dimen/dimen_32"
        android:layout_marginRight="@dimen/dimen_32" />

    <vn.edu.techkids.pomodoro.view.ProgressView
        android:id="@+id/progress_view"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_20"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="@dimen/dimen_16"
        android:layout_marginRight="@dimen/dimen_16"
        android:layout_marginBottom="@dimen/dimen_20" />

    <TextView
        android:id="@+id/tv_periods_counter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/progress_view"
        android:layout_marginLeft="@dimen/dimen_16"
        android:textColor="@android:color/white"
        android:layout_marginBottom="@dimen/dimen_8" />
</RelativeLayout>