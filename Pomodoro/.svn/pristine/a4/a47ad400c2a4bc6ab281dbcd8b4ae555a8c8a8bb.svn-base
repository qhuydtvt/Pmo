<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="vn.edu.techkids.pomodoro.fragments.AddEditTaskFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimary"
            android:orientation="vertical"
            android:paddingBottom="@dimen/dimen_12"
            android:paddingLeft="@dimen/dimen_12"
            android:paddingRight="@dimen/dimen_16"
            android:paddingTop="@dimen/dimen_12">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/title_task_name"
                android:textColor="@color/white_text" />

            <EditText
                android:id="@+id/et_task_name_edit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/white_text"
                android:textSize="@dimen/textsize_large" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="@dimen/dimen_12"
            android:paddingLeft="@dimen/dimen_12"
            android:paddingRight="@dimen/dimen_16"
            android:paddingTop="@dimen/dimen_12">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/title_task_payment"
                android:textColor="@color/primary_text"/>

            <EditText
                android:id="@+id/et_task_payment_edit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="numberDecimal"
                android:textColor="@color/primary_text"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/title_task_color"
                android:textColor="@color/primary_text"/>
            <Spinner
                android:id="@+id/sp_task_color_edit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </LinearLayout>
    </LinearLayout>
</FrameLayout>
